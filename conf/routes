# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                          port.adapter.ui.controllers.Application.index

POST        /api/account/signup        port.adapter.api.controllers.AccountController.signUp

POST        /api/account/signin        port.adapter.api.controllers.AccountController.signIn

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
